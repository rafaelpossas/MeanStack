
<h1>{{course.title}}</h1>
<div class="content-container-85 row">
    <div class="col-md-6">
        <h3 ng-show="course.featured"> Featured</h3>
        <h3> Published on {{course.published | date:'dd/MM/yyyy'}}</h3>
    </div>
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">Tags</div>
            <div class="panel-body">
                <div  ng-repeat="tag in course.tags" class="curved-button" style="margin-right: 5px;">
                    {{tag}}
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="top-right-bar">
        <button type="button" class="btn btn-primary" ng-click="editCourse()">Editar</button>
    </div>
</div>